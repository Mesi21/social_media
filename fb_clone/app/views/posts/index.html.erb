
<div class="row">
  <p id="notice"><%= notice %></p>  
  <div class="col-md-6 form-new-user col-md-offset-3">
    <ul>      
    <h1>Posts</h1> 
    <% @posts.each do |post| %>
      <ol class='posts'>
        <%= render post =%>
      </ol>
    <% end %>
  </div>
</div>



<%= link_to 'New Post', new_post_path %> <br>
<% if !signed_in?(@post.user)%>
  <%= link_to 'Sign up', new_user_registration_path %>
<% end %>